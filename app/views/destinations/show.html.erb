<p id="notice"><%= notice %></p>

<style>
  body {
    background: url(<%= @destination.image %>);
    background-size: cover;
    opacity: 0.8;
    color: white;
  }
</style>

<h1><%= link_to @destination.name, @destination.dest_url, target: "_blank" %></h1>

<p>
  <strong>Description:</strong>
  <%= @destination.description %>
</p>

<p>
  <strong>Total cost:</strong>
  <%= @destination.travel_cost + @destination.dest_cost %>
</p>

<div class="container-fluid" id="map"></div>

<div class="container-fluid">
    <div class="col-xs-2 col-sm-3">
      <p><strong>Try Again?</strong></p>
      <%= bootstrap_form_tag do |f| %>
        <%= link_to "Random", "#{@randest_id}", class: "btn btn-primary btn-lg btn-block"  %>
      <% end %>
    </div>   
</div>

<%= link_to 'Edit', edit_destination_path(@destination) %> |
<%= link_to 'All Daycations', destinations_path %>

<%= javascript_tag do %>
  latitude = '<%= j @destination.latitude.to_s %>';
  longitude = '<%= j @destination.longitude.to_s %>';
  address = '<%= j @destination.address %>';
  description = '<%= j @destination.description %>';
<% end %>