      <br>
      <br>
      <h4><strong>Try Again?</strong></h4>
      <%= bootstrap_form_tag do |f| %>
        <%= link_to "Random", "/#{@randest_id}", class: "btn btn-warning btn-lg btn-block"  %>
      <% end %>
    </div>   
</div>

