<p id="notice"><%= notice %></p>

<h1>Daycation Spots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Characteristics</th>
      <th>Travel cost</th>
      <th>Destination cost</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= destination.name %></td>
        <td><%= destination.dest_type %></td>
        <td><%= destination.description %></td>
        <td><%= destination.characteristics %></td>
        <td><%= destination.travel_cost %></td>
        <td><%= destination.dest_cost %></td>
        <td><%= destination.image %></td>
        <td><%= link_to 'Show', destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

