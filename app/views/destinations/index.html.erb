<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Search Daycations</h1>
  <!-- search form -->
  <%= search_form_for @search do |f| %>
    <div class ="field">
     <%= f.label :name_cont, "Name Contains" %>
     <%= f.text_field :name_cont %>
    </div>
    <br>
    <div class="field">
       <%= f.label :travel_cost_lteq %>
       <%= f.text_field :travel_cost_lteq  %>
    </div>
    <br>
    <div class="field">
     <%= f.label :dest_cost_lteq %>
     <%= f.text_field :dest_cost_lteq %>
    </div>
    <br>
    <div class="actions">
     <%= f.submit "Search", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
<br>
<br>

<!-- Square cards -->

<style>
.demo-card-square.mdl-card {
  width: 320px;
  height: 350px;
  display: inline-block;
  z-index: 10;
}

.demo-card-square > .mdl-card__title {
  color: black;
  /*background: bottom right 15% no-repeat #5a5a5a;*/
  height: 200px;
}

.mdl-card__title-text {
  padding-left: 16px;
  padding-top: 10px;
}

</style>

<div class="container">
    <% @destinations.each do |destination| %>
      <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <div class="mdl-card__title-text">
          <%= destination.name %>
        </div>
        <div class="mdl-card__title mdl-card--expand">
          <%= image_tag destination.image, :style => "width: 100%; height: 100%" %>
        </div>
        <div class="mdl-card__supporting-text">
          <%= destination.description %>
        </div>
        <div class="mdl-card__actions mdl-card--border">
          <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
            <%= link_to "View Daycation", destination %>
          </a>
        </div>
      </div>
    <% end %>
</div>
<!-- end card -->

