class WelcomeController < ApplicationController
  def index
  	@all_id = Destination.pluck(:id)
  	@randest_id = @all_id.sample
  end
end


<div id="myCarousel" class="carousel slide" data-ride="carousel">
<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
	</ol>
	<div class="carousel-inner" role="listbox">
		<div class="item active">
			<div class="container">
				<div class="carousel-caption">
					<h2>Where do you want to go today?</h2>
					<%= bootstrap_form_tag do |f| %>
			  			<%= f.text_field :address, hide_label: true, placeholder: "starting address (e.g. Charlotte, NC)" %>
			  			<%= f.submit link_to "Random", "/destinations/#{@randest_id}", class: "btn btn-primary btn-lg"  %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="item">
		<img class="second-slide" src="" alt="">
		<div class="container">
		<div class="carousel-caption">
		<h2>Already have an idea?</h2>
		<p><%= link_to "Destinations", destinations_path, class: "btn btn-lg btn-primary" %></p>
		</div>
		</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
		<span class="sr-only">Next</span>
	</a>
</div>
</div>
<!-- /.carousel -->

<div class="container marketing">

      <!-- Three columns of text below the carousel -->
      <div class="row">
        <div class="col-lg-4">
          <img class="img-circle" src="https://static.pexels.com/photos/5358/sea-beach-holiday-vacation-medium.jpg" alt="Generic placeholder image" width="200" height="200">
          <h2>Water/Beach</h2>
          <p>Go fishing, boating, or just relax and freshwater and ocean destinations.</p>
          <p><%= link_to "Destinations", destinations_path, class: "btn btn-default" %></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <img class="img-circle" src="https://static.pexels.com/photos/1562/italian-landscape-mountains-nature-medium.jpg" alt="Generic placeholder image" width="200" height="200">
          <h2>Mountains</h2>
          <p>With drives of less than 30 minutes to a few hours, North Carolina offers plenty of mountain destinations for a day trip.</p>
          <p><%= link_to "Destinations", destinations_path, class: "btn btn-default" %></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <img class="img-circle" src="http://touristmeetstraveler.com/wp-content/uploads/please-touch-museum.jpg" alt="Generic placeholder image" width="200" height="200">
          <h2>Museums/Parks</h2>
          <p>Historic homes, museums, exotic petting zoos: the Charlotte area has many treasures	.</p>
          <p><%= link_to "Destinations", destinations_path, class: "btn btn-default" %></p>
        </div><!-- /.col-lg-4 -->
      </div><!-- /.row -->